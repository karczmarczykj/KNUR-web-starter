{
  "name": "platform-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for modern web applications",
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "build:dev": "NODE_OPTIONS=\"--loader ts-node/esm\" npx webpack build -c ./config/webpack/webpack.config.ts --env buildMode=development service=all",
    "build:test": "NODE_OPTIONS=\"--loader ts-node/esm \" npx webpack build -c ./config/webpack/webpack.config.ts --env buildMode=test service=all",
    "build:production": "NODE_OPTIONS=\"--loader ts-node/esm\" npx webpack build -c ./config/webpack/webpack.config.ts --env buildMode=production service=all",
    "start:dev": "node dist/development/all/main.cjs",
    "start:test": "node dist/test/all/main.cjs",
    "clean": "rm -fR dist/development && rm -fR dist/production && rm -fR dist/test",
    "cert:generate": "node scripts/generate-certs.mjs",
    "test:backend:unit": "jest --notify --config=config/jest/backend.config.ts --rootDir . --roots src --testNamePattern=\"unit:\"",
    "test:backend:integration": "jest --notify --config=config/jest/backend.config.ts --rootDir . --roots src --testNamePattern=\"integration:\""
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.22.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.51.0",
    "@types/connect-history-api-fallback": "^1.5.4",
    "@types/convict": "^6.1.6",
    "@types/convict-format-with-validator": "^6.0.5",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/koa": "^2.15.0",
    "@types/koa-convert": "^1.2.7",
    "@types/koa-router": "^7.4.8",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^22.13.10",
    "@types/pino": "^7.0.4",
    "@types/supertest": "^6.0.2",
    "@types/webpack-dev-middleware": "^5.0.2",
    "@types/webpack-hot-middleware": "^2.25.9",
    "@types/webpack-node-externals": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^10.0.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.3",
    "fs-extra": "^11.3.0",
    "inquirer": "^12.4.3",
    "jest": "^29.7.0",
    "koa-connect": "^2.1.0",
    "node-mocks-http": "^1.16.2",
    "node-notifier": "^10.0.1",
    "prettier": "^3.5.3",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-middleware": "^7.4.2",
    "webpack-hot-middleware": "^2.26.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "find-file-up": "^2.0.1",
    "html-webpack-plugin": "^5.6.3",
    "js-yaml": "^4.1.0",
    "koa": "^2.16.0",
    "koa-connect-history-api-fallback": "^0.3.1",
    "koa-router": "^13.0.1",
    "koa-static": "^5.0.0",
    "ms": "^2.1.3",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "tldts": "^6.1.84",
    "validator": "^13.12.0"
  }
}
