{
  "name": "platform-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for modern web applications",
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "build:dev": "NODE_OPTIONS=\"--loader ts-node/esm\" npx webpack build -c ./config/webpack/webpack.config.ts --node-env development",
    "build:prod": "NODE_OPTIONS=\"--loader ts-node/esm\" npx webpack build -c ./config/webpack/webpack.config.ts --node-env production",
    "start:dev": "node dist/development/server/main.js",
    "clean": "rm -fR dist/development && rm -fR dist/production && rm -fR dist/test",
    "test:unit:backend": "jest --notify --config=config/jest/backend.config.ts --rootDir . --roots src"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.22.0",
    "@jest/globals": "^29.7.0",
    "@types/convict": "^6.1.6",
    "@types/convict-format-with-validator": "^6.0.5",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.13.10",
    "@types/pino": "^7.0.4",
    "@types/webpack-node-externals": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^10.0.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.3",
    "fs-extra": "^11.3.0",
    "inquirer": "^12.4.3",
    "jest": "^29.7.0",
    "node-notifier": "^10.0.1",
    "prettier": "^3.5.3",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "find-file-up": "^2.0.1",
    "js-yaml": "^4.1.0",
    "ms": "^2.1.3",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "validator": "^13.12.0"
  }
}
